@model IEnumerable<CondoSphere.Models.Company>

@{
    ViewData["Title"] = "Companies";
}

@section PageHeader {
    <section class="page-title">
        <div class="container">
            <h1>Companies</h1>
            <div class="breadcrumbs">
                <ol>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li>Companies</li>
                </ol>
            </div>
        </div>
    </section>
}

<section class="section">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="m-0">Companies</h2>
            <a class="btn btn-success" asp-action="Create"><i class="bi bi-plus-lg"></i> New</a>
        </div>

        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Tax Number</th>
                            <th>Email</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in (Model ?? Enumerable.Empty<CondoSphere.Models.Company>()))
                        {
                            <tr>
                                <td class="fw-semibold">@c.Name</td>
                                <td>@c.TaxNumber</td>
                                <td>@c.Email</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@c.Id">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@c.Id">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@c.Id">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                        @if (Model == null || !Model.Any())
                        {
                            <tr><td colspan="4" class="text-center text-muted py-4">No records found.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
 }