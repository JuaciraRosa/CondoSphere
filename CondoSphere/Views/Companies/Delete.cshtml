@model CondoSphere.Models.Company
@{
    ViewData["Title"] = "Delete Company";
}

@section PageHeader {
    <section class="page-title">
        <div class="container">
            <h1>Delete Company</h1>
            <div class="breadcrumbs">
                <ol>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Companies" asp-action="Index">Companies</a></li>
                    <li>Delete</li>
                </ol>
            </div>
        </div>
    </section>
}

<section class="section">
    <div class="container">
        <div class="card shadow-sm p-4">
            <p class="mb-3">Are you sure you want to delete this company?</p>

            <div class="row gy-3">
                <div class="col-md-6">
                    <div class="fw-semibold text-muted">Name</div>
                    <div>@Model.Name</div>
                </div>
                <div class="col-md-3">
                    <div class="fw-semibold text-muted">Tax Number</div>
                    <div>@Model.TaxNumber</div>
                </div>
                <div class="col-md-3">
                    <div class="fw-semibold text-muted">Email</div>
                    <div>@Model.Email</div>
                </div>
            </div>

            <form class="mt-4 d-flex gap-2" asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
                <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-arrow-left"></i> Back</a>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
 }