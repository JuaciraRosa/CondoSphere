@model CondoSphere.Models.Company
@{
    ViewData["Title"] = "Company Details";
}

@section PageHeader {
    <section class="page-title">
        <div class="container">
            <h1>Company Details</h1>
            <div class="breadcrumbs">
                <ol>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Companies" asp-action="Index">Companies</a></li>
                    <li>Details</li>
                </ol>
            </div>
        </div>
    </section>
}

<section class="section">
    <div class="container">
        <div class="card shadow-sm p-4 mb-4">
            <div class="row gy-3">
                <div class="col-md-4">
                    <div class="fw-semibold text-muted">Name</div>
                    <div>@Model.Name</div>
                </div>
                <div class="col-md-4">
                    <div class="fw-semibold text-muted">Tax Number</div>
                    <div>@Model.TaxNumber</div>
                </div>
                <div class="col-md-4">
                    <div class="fw-semibold text-muted">Email</div>
                    <div>@Model.Email</div>
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-arrow-left"></i> Back</a>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id"><i class="bi bi-pencil"></i> Edit</a>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="m-0">Condominiums</h5>
                    <a class="btn btn-sm btn-success"
                       asp-controller="Condominiums" asp-action="Create" asp-route-companyId="@Model.Id">
                        <i class="bi bi-plus-lg"></i> New Condominium
                    </a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Address</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var condo in (Model.Condominiums ?? Enumerable.Empty<CondoSphere.Models.Condominium>()))
                        {
                            <tr>
                                <td class="fw-semibold">@condo.Name</td>
                                <td>@condo.Address</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-secondary"
                                       asp-controller="Condominiums" asp-action="Details" asp-route-id="@condo.Id">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a class="btn btn-sm btn-outline-primary"
                                       asp-controller="Condominiums" asp-action="Edit" asp-route-id="@condo.Id">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                        @if (Model.Condominiums == null || !Model.Condominiums.Any())
                        {
                            <tr><td colspan="3" class="text-center text-muted py-4">No condominiums.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
 }