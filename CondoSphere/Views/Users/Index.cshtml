@model IEnumerable<CondoSphere.Data.User>

@{
    ViewData["Title"] = "Users";
}

@section PageHeader {
    <section class="page-title">
        <div class="container">
            <h1>Users</h1>
            <div class="breadcrumbs">
                <ol>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li>Users</li>
                </ol>
            </div>
        </div>
    </section>
}
<section class="section">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2><i class="bi bi-people"></i> Users</h2>
            <a class="btn btn-success" asp-action="Create">
                <i class="bi bi-plus-lg"></i> New
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Active</th>
                            <th>Company</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var u in Model)
                        {
                            <tr>
                                <td>@u.FullName</td>
                                <td>@u.Email</td>
                                <td>@u.Role</td>
                                <td>
                                    @if (u.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>@u?.Company?.Name ?? "-"</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@u.Id"><i class="bi bi-pencil"></i></a>
                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@u.Id"><i class="bi bi-eye"></i></a>
                                    <form class="d-inline" asp-action="Delete" asp-route-id="@u.Id" method="post" onsubmit="return confirm('Delete this user?');">
                                        @Html.AntiForgeryToken()
                                        <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
 }