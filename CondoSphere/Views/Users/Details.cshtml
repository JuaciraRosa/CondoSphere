@model CondoSphere.Data.User

@{
    ViewData["Title"] = "User Details";
}

<section class="section">
    <div class="container">
        <div class="card shadow-sm p-4">
            <h4 class="mb-4"><i class="bi bi-person-badge"></i> User Details</h4>
            <div class="row gy-3">
                <div class="col-md-6">
                    <div class="fw-semibold text-muted">Full Name</div>
                    <div>@Model.FullName</div>
                </div>
                <div class="col-md-6">
                    <div class="fw-semibold text-muted">Email</div>
                    <div>@Model.Email</div>
                </div>
                <div class="col-md-4">
                    <div class="fw-semibold text-muted">Role</div>
                    <div>@Model.Role</div>
                </div>
                <div class="col-md-4">
                    <div class="fw-semibold text-muted">Active</div>
                    <div>
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="fw-semibold text-muted">Company</div>
                    <div>@Model?.Company?.Name ?? "-"</div>
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-arrow-left"></i> Back</a>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id"><i class="bi bi-pencil"></i> Edit</a>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}