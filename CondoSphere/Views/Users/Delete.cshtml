@model CondoSphere.Data.User

@{
    ViewData["Title"] = "Delete User";
}

<section class="section">
    <div class="container">
        <div class="card shadow-sm p-4">
            <h4 class="mb-3 text-danger"><i class="bi bi-trash"></i> Delete User</h4>
            <p class="mb-3">Are you sure you want to delete this user?</p>

            <div class="row gy-3">
                <div class="col-md-6">
                    <div class="fw-semibold text-muted">Full Name</div>
                    <div>@Model.FullName</div>
                </div>
                <div class="col-md-6">
                    <div class="fw-semibold text-muted">Email</div>
                    <div>@Model.Email</div>
                </div>
                <div class="col-md-4">
                    <div class="fw-semibold text-muted">Role</div>
                    <div>@Model.Role</div>
                </div>
                <div class="col-md-4">
                    <div class="fw-semibold text-muted">Active</div>
                    <div>
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="fw-semibold text-muted">Company</div>
                    <div>@Model?.Company?.Name ?? "-"</div>
                </div>
            </div>

            <form class="mt-4 d-flex gap-2" asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
                <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-arrow-left"></i> Back</a>
            </form>
        </div>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}