@model CondoSphere.Models.Meeting

@{
    ViewData["Title"] = "Details";
}

<div class="container-xl">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="ti ti-info-circle"></i> Meeting Details</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Scheduled Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ScheduledDate)</dd>

                <dt class="col-sm-3">Agenda</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Agenda)</dd>

                <dt class="col-sm-3">Minutes Document</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MinutesDocumentPath)</dd>

                <dt class="col-sm-3">Condominium</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Condominium.Id)</dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="ti ti-edit"></i> Edit</a>
            <a asp-action="Index" class="btn btn-secondary"><i class="ti ti-arrow-left"></i> Back</a>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}