@model CondoSphere.Models.Meeting


@{
    ViewData["Title"] = "Delete";
}

<div class="container-xl">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title"><i class="ti ti-trash"></i> Delete Meeting</h3>
        </div>
        <div class="card-body">
            <h5>Are you sure you want to delete this meeting?</h5>
            <dl class="row mt-3">
                <dt class="col-sm-3">Scheduled Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ScheduledDate)</dd>

                <dt class="col-sm-3">Agenda</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Agenda)</dd>

                <dt class="col-sm-3">Minutes Document</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MinutesDocumentPath)</dd>

                <dt class="col-sm-3">Condominium</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Condominium.Id)</dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger"><i class="ti ti-trash"></i> Delete</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="ti ti-arrow-left"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}