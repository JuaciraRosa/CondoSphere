@model CondoSphere.Models.Meeting

@{
    ViewData["Title"] = "Edit";
}

<div class="container-xl">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="ti ti-edit"></i> Edit Meeting</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="ScheduledDate" class="form-label"></label>
                    <input asp-for="ScheduledDate" class="form-control" />
                    <span asp-validation-for="ScheduledDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Agenda" class="form-label"></label>
                    <input asp-for="Agenda" class="form-control" />
                    <span asp-validation-for="Agenda" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MinutesDocumentPath" class="form-label"></label>
                    <input asp-for="MinutesDocumentPath" class="form-control" />
                    <span asp-validation-for="MinutesDocumentPath" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CondominiumId" class="form-label"></label>
                    <select asp-for="CondominiumId" class="form-select" asp-items="ViewBag.CondominiumId"></select>
                </div>

                <div>
                    <button type="submit" class="btn btn-primary"><i class="ti ti-device-floppy"></i> Save</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="ti ti-arrow-left"></i> Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}