@model CondoSphere.Models.MaintenanceRequest
@{
    ViewData["Title"] = "Delete Request";
}

@section PageHeader {
    <section class="page-title">
        <div class="container">
            <h1>Delete Request</h1>
            <div class="breadcrumbs">
                <ol>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="MaintenanceRequests" asp-action="Index">Maintenance</a></li>
                    <li>Delete</li>
                </ol>
            </div>
        </div>
    </section>
}

<section class="section">
    <div class="container">
        <div class="card shadow-sm p-4">
            <p class="mb-3">Are you sure you want to delete this request?</p>

            <div class="row gy-3">
                <div class="col-md-6">
                    <div class="fw-semibold text-muted">Title</div>
                    <div>@Model.Title</div>
                </div>
                <div class="col-md-6">
                    <div class="fw-semibold text-muted">Submitted At</div>
                    <div>@Model.SubmittedAt.ToString("yyyy-MM-dd HH:mm")</div>
                </div>
                <div class="col-md-12">
                    <div class="fw-semibold text-muted">Description</div>
                    <div>@Model.Description</div>
                </div>
                <div class="col-md-4">
                    <div class="fw-semibold text-muted">Status</div>
                    <div>@Model.Status</div>
                </div>
                <div class="col-md-4">
                    <div class="fw-semibold text-muted">Condominium</div>
                    <div>@Model.Condominium?.Name ?? "-"</div>
                </div>
                <div class="col-md-4">
                    <div class="fw-semibold text-muted">Submitted By</div>
                    <div>@Model.SubmittedBy?.FullName ?? Model.SubmittedBy?.Email ?? "-"</div>
                </div>
            </div>

            <form class="mt-4 d-flex gap-2" asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
                <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-arrow-left"></i> Back</a>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}