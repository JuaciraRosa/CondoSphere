﻿@using System.Security.Claims
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var user = HttpContextAccessor.HttpContext?.User;
    var isAuth = user?.Identity?.IsAuthenticated == true;
    var role = user?.FindFirst(ClaimTypes.Role)?.Value
               ?? user?.FindFirst("role")?.Value;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - CondoSphere</title>

    <!-- Favicons -->
    <link rel="icon" href="~/assets/img/favicon.png" asp-append-version="true" />
    <link rel="apple-touch-icon" href="~/assets/img/apple-touch-icon.png" asp-append-version="true" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&family=Nunito:wght@400;600;700&family=Raleway:wght@600;700;800&display=swap" rel="stylesheet" />

    <!-- Vendor CSS -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet" asp-append-version="true" />

    <!-- Main CSS -->
    <link href="~/assets/css/main.css" rel="stylesheet" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body class="index-page">

    <!-- Header -->
    <header id="header" class="header d-flex align-items-center sticky-top">
        <div class="container position-relative d-flex align-items-center justify-content-between">
            <a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center me-auto me-lg-0 text-decoration-none">
                <h1 class="sitename m-0">CondoSphere</h1>
            </a>

            <nav id="navmenu" class="navmenu">
                <ul>
                    @if (isAuth)
                    {
                        <li><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>

                        @* Administrator *@
                        @if (role == "Administrator")
                        {
                            <li><a asp-controller="Users" asp-action="Index">Users</a></li>
                            <li><a asp-controller="Companies" asp-action="Index">Companies</a></li>
                        }

                        @* Administrator or Manager *@
                        @if (role == "Administrator" || role == "Manager")
                        {
                            <li><a asp-controller="Condominiums" asp-action="Index">Condominiums</a></li>
                            <li><a asp-controller="Meetings" asp-action="Index">Meetings</a></li>
                            <li><a asp-controller="Expenses" asp-action="Index">Expenses</a></li>
                            <li><a asp-controller="Quotas" asp-action="Index">Quotas</a></li>
                            <li><a asp-controller="Payments" asp-action="Index">Payments</a></li>
                            <li><a asp-controller="Notifications" asp-action="Index">Notifications</a></li>
                        }

                        @* Resident *@
                        @if (role == "Resident")
                        {
                            <li><a asp-controller="Units" asp-action="Index">My Unit</a></li>
                            <li><a asp-controller="Meetings" asp-action="Index">Meetings</a></li>
                            <li><a asp-controller="Notifications" asp-action="Index">Notifications</a></li>
                        }

                        @* Account dropdown *@
                        <li class="dropdown">
                            <a href="#"><span>@($"{user?.Identity?.Name} ({role})")</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
                            <ul>
                                <li><a asp-controller="Account" asp-action="Profile">Profile</a></li>
                                <li><a asp-controller="Account" asp-action="ChangePassword">Change Password</a></li>
                                <li><a asp-controller="Account" asp-action="DownloadData">Download My Data (JSON)</a></li>

                            </ul>
                        </li>
                    }
                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>

            <div class="d-flex align-items-center gap-2">
                @if (isAuth)
                {
                    <form method="post" asp-controller="Auth" asp-action="Logout" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger btn-sm">Logout</button>
                    </form>
                }
                else
                {
                    <a class="btn btn-primary btn-sm" href="@Url.Action("Login","Auth")">Login</a>
                }
            </div>
        </div>
    </header>

    @* Page title/breadcrumbs opcional *@
    @RenderSection("PageHeader", required: false)

    <main class="py-4">
        <div class="container" data-aos="fade-up">
            @if (TempData["Success"] is string ok && !string.IsNullOrEmpty(ok))
            {
                <div class="alert alert-success">@ok</div>
            }
            @if (TempData["Error"] is string err && !string.IsNullOrEmpty(err))
            {
                <div class="alert alert-danger">@err</div>
            }

            @RenderBody()
        </div>
    </main>

    <footer id="footer" class="footer">
        <div class="container d-flex justify-content-between small">
            <span>&copy; @DateTime.UtcNow.Year - CondoSphere</span>
            <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacy</a>
        </div>
    </footer>

    <!-- Scroll Top & Preloader -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center">
        <i class="bi bi-arrow-up-short"></i>
    </a>
    <div id="preloader"></div>

    <!-- Vendor JS -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/assets/vendor/php-email-form/validate.js" asp-append-version="true"></script>
    <script src="~/assets/vendor/aos/aos.js" asp-append-version="true"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js" asp-append-version="true"></script>
    <script src="~/assets/vendor/imagesloaded/imagesloaded.pkgd.min.js" asp-append-version="true"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js" asp-append-version="true"></script>
    <script src="~/assets/vendor/waypoints/noframework.waypoints.js" asp-append-version="true"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js" asp-append-version="true"></script>

    <!-- Main JS -->
    <script src="~/assets/js/main.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>