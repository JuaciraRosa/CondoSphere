@model CondoSphere.Models.Payment

@{
    ViewData["Title"] = "Create Payment";
}

<section class="section">
    <div class="container">
        <div class="card p-4 shadow-sm">
            <h4 class="mb-4"><i class="bi bi-plus-circle"></i> Create Payment</h4>

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="QuotaId" class="form-label">Quota</label>
                        <select asp-for="QuotaId" class="form-select" asp-items="ViewBag.QuotaId"></select>
                        <span asp-validation-for="QuotaId" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="PaymentDate" class="form-label"></label>
                        <input asp-for="PaymentDate" type="date" class="form-control" />
                        <span asp-validation-for="PaymentDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="PaymentMethod" class="form-label"></label>
                        <input asp-for="PaymentMethod" class="form-control" />
                        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ReceiptNumber" class="form-label"></label>
                        <input asp-for="ReceiptNumber" class="form-control" />
                        <span asp-validation-for="ReceiptNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-check2"></i> Save</button>
                    <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-arrow-left"></i> Cancel</a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}