@model CondoSphere.Models.Unit

@{
    ViewData["Title"] = "Create";
}
<div class="card shadow-sm">
    <div class="card-header">
        <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Create Unit</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Number" class="form-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Area" class="form-label"></label>
                <input asp-for="Area" class="form-control" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CondominiumId" class="form-label"></label>
                <select asp-for="CondominiumId" class="form-select" asp-items="ViewBag.CondominiumId"></select>
            </div>

            <div class="mb-3">
                <label asp-for="OwnerId" class="form-label"></label>
                <select asp-for="OwnerId" class="form-select" asp-items="ViewBag.OwnerId"></select>
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Save</button>
                <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}