@model CondoSphere.Models.Unit

@{
    ViewData["Title"] = "Delete Unit";
}

<div class="card shadow-sm border-danger">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Confirm Delete</h4>
    </div>
    <div class="card-body">
        <p class="text-danger fw-bold">Are you sure you want to delete this unit?</p>
        <dl class="row mb-0">
            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Number)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Number)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Area)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Area)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Condominium)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Condominium.Id)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Owner)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Owner.Id)</dd>
        </dl>
    </div>
    <div class="card-footer text-end">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
        </form>
        <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Cancel</a>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}