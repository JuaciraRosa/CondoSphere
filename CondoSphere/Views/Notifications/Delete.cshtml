@model CondoSphere.Models.Notification

@{
    ViewData["Title"] = "Delete Notification";
}

<div class="page-body">
    <div class="container-xl">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h3 class="card-title">Delete Notification</h3>
            </div>
            <div class="card-body">
                <h4>Are you sure you want to delete this notification?</h4>
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Message)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.Message)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.SentAt)</dt>
                    <dd class="col-sm-9">@Model.SentAt.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Condominium)</dt>
                    <dd class="col-sm-9">@Model.Condominium?.Id</dd>
                </dl>
            </div>
            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}