@model CondoSphere.Models.Notification
@{
    ViewData["Title"] = "Notification Details";
}

<div class="page-body">
    <div class="container-xl">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Notification Details</h3>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Message)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.Message)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.SentAt)</dt>
                    <dd class="col-sm-9">@Model.SentAt.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Condominium)</dt>
                    <dd class="col-sm-9">@Model.Condominium?.Id</dd>
                </dl>
            </div>
            <div class="card-footer">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}