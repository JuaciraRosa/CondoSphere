@model CondoSphere.Models.Quota

@{
    ViewData["Title"] = "Edit Quota";
}

<section class="section">
    <div class="container">
        <div class="card p-4 shadow-sm">
            <h4 class="mb-4"><i class="bi bi-pencil-square"></i> Edit Quota</h4>

            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="UnitId" class="form-label">Unit</label>
                        <select asp-for="UnitId" class="form-select" asp-items="ViewBag.UnitId"></select>
                        <span asp-validation-for="UnitId" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Amount" class="form-label"></label>
                        <input asp-for="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="DueDate" class="form-label"></label>
                        <input asp-for="DueDate" type="date" class="form-control" />
                        <span asp-validation-for="DueDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-3 d-flex align-items-end">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="IsPaid" />
                            <label class="form-check-label" asp-for="IsPaid"></label>
                        </div>
                    </div>
                </div>

                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-check2"></i> Save</button>
                    <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-arrow-left"></i> Cancel</a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}