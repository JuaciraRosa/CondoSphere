@model CondoSphere.Models.Quota

@{
    ViewData["Title"] = "Delete Quota";
}

<section class="section">
    <div class="container">
        <div class="card shadow-sm p-4">
            <h4 class="mb-3 text-danger"><i class="bi bi-exclamation-triangle"></i> Delete Quota</h4>
            <p>Are you sure you want to delete this quota?</p>

            <div class="row gy-3">
                <div class="col-md-4">
                    <div class="fw-semibold text-muted">Unit</div>
                    <div>@(Model?.Unit?.Number ?? $"#{Model.UnitId}")</div>
                </div>
                <div class="col-md-4">
                    <div class="fw-semibold text-muted">Amount</div>
                    <div>@Model.Amount.ToString("C")</div>
                </div>
                <div class="col-md-4">
                    <div class="fw-semibold text-muted">Due date</div>
                    <div>@Model.DueDate.ToString("yyyy-MM-dd")</div>
                </div>
                <div class="col-md-4">
                    <div class="fw-semibold text-muted">Status</div>
                    <div>
                        @if (Model.IsPaid)
                        {
                            <span class="badge bg-success">Paid</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                    </div>
                </div>
            </div>

            <form class="mt-4 d-flex gap-2" asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
                <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-arrow-left"></i> Back</a>
            </form>
        </div>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}