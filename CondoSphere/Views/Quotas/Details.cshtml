@model CondoSphere.Models.Quota

@{
    ViewData["Title"] = "Quota Details";
}

<section class="section">
    <div class="container">
        <div class="card shadow-sm p-4">
            <h4 class="mb-4"><i class="bi bi-info-circle"></i> Quota Details</h4>

            <div class="row gy-3">
                <div class="col-md-4">
                    <div class="fw-semibold text-muted">Unit</div>
                    <div>@(Model?.Unit?.Number ?? $"#{Model.UnitId}")</div>
                </div>
                <div class="col-md-4">
                    <div class="fw-semibold text-muted">Amount</div>
                    <div>@Model.Amount.ToString("C")</div>
                </div>
                <div class="col-md-4">
                    <div class="fw-semibold text-muted">Due date</div>
                    <div>@Model.DueDate.ToString("yyyy-MM-dd")</div>
                </div>
                <div class="col-md-4">
                    <div class="fw-semibold text-muted">Status</div>
                    <div>
                        @if (Model.IsPaid)
                        {
                            <span class="badge bg-success">Paid</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                    </div>
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-arrow-left"></i> Back</a>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id"><i class="bi bi-pencil"></i> Edit</a>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}