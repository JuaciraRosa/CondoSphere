@model IEnumerable<CondoSphere.Models.Quota>

@{
    ViewData["Title"] = "Quotas";
}

@* Flash messages *@
@if (TempData["Ok"] is string ok && !string.IsNullOrWhiteSpace(ok))
{
    <div class="alert alert-success">@ok</div>
}
@if (TempData["Err"] is string err && !string.IsNullOrWhiteSpace(err))
{
    <div class="alert alert-danger">@err</div>
}

<div class="card mb-3 p-3">
    <h5>Generate quotas</h5>

    <form asp-action="GenerateMonthly" method="post" class="row g-2">
        @Html.AntiForgeryToken()
        <div class="col-md-4">
            <label class="form-label">Condominium</label>
            <select name="condominiumId" class="form-select" asp-items="ViewBag.Condominiums"></select>
        </div>
        <div class="col-md-2">
            <label class="form-label">Year</label>
            <input name="year" type="number" class="form-control" value="@DateTime.UtcNow.Year" required />
        </div>
        <div class="col-md-2">
            <label class="form-label">Month</label>
            <input name="month" type="number" min="1" max="12" class="form-control" value="@DateTime.UtcNow.Month" required />
        </div>
        <div class="col-md-3">
            <label class="form-label">Amount per unit (€)</label>
            <input name="amount" type="number" step="0.01" class="form-control" required />
        </div>
        <div class="col-md-1 d-flex align-items-end">
            <button class="btn btn-primary w-100">Generate</button>
        </div>
    </form>

    <form asp-action="GenerateRange" method="post" class="row g-2 mt-2">
        @Html.AntiForgeryToken()
        <div class="col-md-4">
            <label class="form-label">Condominium</label>
            <select name="condominiumId" class="form-select" asp-items="ViewBag.Condominiums"></select>
        </div>
        <div class="col-md-3">
            <label class="form-label">From (yyyy-mm)</label>
            <input name="from" type="month" class="form-control" required />
        </div>
        <div class="col-md-3">
            <label class="form-label">To (yyyy-mm)</label>
            <input name="to" type="month" class="form-control" required />
        </div>
        <div class="col-md-1">
            <label class="form-label">Amount</label>
            <input name="amount" type="number" step="0.01" class="form-control" required />
        </div>
        <div class="col-md-1 d-flex align-items-end">
            <button class="btn btn-outline-secondary w-100">Range</button>
        </div>
    </form>
</div>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover table-striped align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Unit</th>
                    <th>Amount</th>
                    <th>Due date</th>
                    <th>Status</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(item?.Unit?.Number ?? $"#{item.UnitId}")</td>
                        <td>@item.Amount.ToString("C")</td>
                        <td>@item.DueDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            @if (item.IsPaid)
                            {
                                <span class="badge bg-success">Paid</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-sm btn-outline-primary" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </a>

                            <a asp-action="Details" asp-route-id="@item.Id"
                               class="btn btn-sm btn-outline-info" title="Details">
                                <i class="bi bi-eye"></i>
                            </a>

                            @if (!item.IsPaid)
                            {
                                <!-- Cartão -->
                                <a asp-action="Pay" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-success me-1" title="Pay by card">
                                    <i class="bi bi-credit-card"></i>
                                </a>

                            }

                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="btn btn-sm btn-outline-danger" title="Delete">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}