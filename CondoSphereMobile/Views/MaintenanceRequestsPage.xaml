<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CondoSphereMobile.Views.MaintenanceRequestsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:CondoSphereMobile.ViewModels"
    Title="Maintenance Requests">

    <ContentPage.BindingContext>
        <vm:MaintenanceRequestsViewModel />
    </ContentPage.BindingContext>


    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">

            <!-- Create form -->
            <Frame Padding="12" BorderColor="#dddddd" HasShadow="False">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Create Maintenance Request" FontAttributes="Bold" />
                    <Entry Placeholder="Title" Text="{Binding Title}" />
                    <Editor Placeholder="Description" AutoSize="TextChanges" Text="{Binding Description}" />
                    <Entry Placeholder="Condominium Id (e.g. 1)" Keyboard="Numeric" Text="{Binding CondominiumId}" />
                    <Button Text="Create" Command="{Binding CreateCommand}" />
                </VerticalStackLayout>
            </Frame>

            <!-- List -->
            <Label Text="My Requests" FontAttributes="Bold" />
            <CollectionView ItemsSource="{Binding Requests}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="0,0,0,10" BorderColor="#eeeeee" HasShadow="False">
                            <VerticalStackLayout Spacing="4">
                                <Label Text="{Binding Title}" FontAttributes="Bold" />
                                <Label Text="{Binding Description}" LineBreakMode="WordWrap" />
                                <Label Text="{Binding SubmittedAt, StringFormat='Submitted: {0:yyyy-MM-dd HH:mm}'}" FontSize="12" TextColor="Gray" />
                                <Label Text="{Binding Status}" FontSize="12" />
                                <Label Text="{Binding CondominiumId, StringFormat='Condo: {0}'}" FontSize="12" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        <VerticalStackLayout>
                <Button Text="Back to Home"
          Clicked="OnBackToHomeClicked"
          BackgroundColor="DarkSlateBlue"
          TextColor="White"
          Margin="0,20,0,0" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
