<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CondoSphereMobile.ViewModels"
             x:Class="CondoSphereMobile.Views.CompaniesPage"
             Title="Companies">

    <ContentPage.BindingContext>
        <viewmodels:CompaniesViewModel/>
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding Companies}"
                    SelectionMode="None"
                    Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="5" BorderColor="LightGray">
                    <VerticalStackLayout>
                        <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="18"/>
                        <Label Text="{Binding Address}" FontSize="14"/>
                        <Label Text="{Binding Email}" FontSize="14"/>
                        <Label Text="{Binding PhoneNumber}" FontSize="14"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>