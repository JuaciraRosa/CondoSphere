<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CondoSphereMobile.Views.UsersPage"
              Title="Users">

    <CollectionView ItemsSource="{Binding Users}"
                    Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="5" BorderColor="LightGray" CornerRadius="10">
                    <VerticalStackLayout>
                        <Label Text="{Binding FullName}" FontAttributes="Bold" FontSize="16" />
                        <Label Text="{Binding Email}" FontSize="14" TextColor="Gray" />
                        <Label Text="{Binding Role}" FontSize="14" />
                        <Label Text="{Binding IsActive, StringFormat='Active: {0}'}" FontSize="14" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>