<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CondoSphereMobile.Views.DashboardPage"
              Title="Dashboard">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Dashboard"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Menu Buttons -->
            <Button Text="Users" Clicked="OnUsersClicked" />
            <Button Text="Companies" Clicked="OnCompaniesClicked" />
            <Button Text="Condominiums" Clicked="OnCondominiumsClicked" />
            <Button Text="Meetings" Clicked="OnMeetingsClicked" />
            <Button Text="Expenses" Clicked="OnExpensesClicked" />
            <Button Text="Units" Clicked="OnUnitsClicked" />
            <Button Text="Payments" Clicked="OnPaymentsClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>