<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CondoSphereMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CondoSphereMobile"
    Shell.FlyoutBehavior="Disabled"
    Title="CondoSphereMobile">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />


    <ShellContent Route="LoginPage" ContentTemplate="{DataTemplate views:LoginPage}" />
    <ShellContent Route="DashboardPage" ContentTemplate="{DataTemplate views:DashboardPage}" />

</Shell>
